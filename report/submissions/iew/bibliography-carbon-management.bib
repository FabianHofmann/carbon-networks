@article{burandtDecarbonizingChinaEnergy2019,
  title = {Decarbonizing {{China}}'s Energy System \textendash{} {{Modeling}} the Transformation of the Electricity, Transportation, Heat, and Industrial Sectors},
  author = {Burandt, Thorsten and Xiong, Bobby and L{\"o}ffler, Konstantin and Oei, Pao-Yu},
  year = {2019},
  month = dec,
  journal = {Applied Energy},
