@article{hamppImportOptionsChemical2021,
  title = {Import Options for Chemical Energy Carriers from Renewable Sources to  {{Germany}}},
  author = {Hampp, Johannes and D{\"u}ren, Michael and Brown, Tom},
  year = {2021},
  month = jan,
  journal = {arXiv preprint arXiv:2107.01092},
