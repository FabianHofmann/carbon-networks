@article{gusatuSpatialTemporalAnalysis2021a,
  title = {Spatial and Temporal Analysis of Cumulative Environmental Effects of Offshore Wind Farms in the {{North Sea}} Basin},
  author = {Gușatu, Laura Florentina and Menegon, Stefano and Depellegrin, Daniel and Zuidema, Christian and Faaij, Andr{\'e} and Yamu, Claudia},
