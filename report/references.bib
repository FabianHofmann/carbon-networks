@article{antoniniAtmosphericPressureGradients2021,
  title = {Atmospheric Pressure Gradients and {{Coriolis}} Forces Provide Geophysical Limits to Power Density of Large Wind Farms},
  author = {Antonini, Enrico G. A. and Caldeira, Ken},
  year = {2021},
